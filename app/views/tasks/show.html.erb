<h2>Details about the task <%= params[:id] %>:</h2>

<h3><%= @task.title %></h3>
<p>details --> <%= @task.details %></p>
<p>completed --> <%= @task.completed %></p>


<hr>
<%= link_to tasks_path do %>
  <i class="fa fa-history"></i> Back to all tasks
<% end %>

<%= link_to edit_path(@task) do %>
  <i class="fa fa-history"></i> Edit
<% end %>

<%= link_to delete_path(@task) do %>
  <i class="fa fa-history"></i> Delete
<% end %>
